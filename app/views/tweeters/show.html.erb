<%- model_class = Tweeter -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tweeter %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:handle) %></dt>
      <dd><pre class="prettyprint"><%= @tweeter.handle %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:access_token) %></dt>
      <dd><pre class="prettyprint"><%= @tweeter.access_token %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:access_token_secret) %></dt>
      <dd><pre class="prettyprint"><%= @tweeter.access_token_secret %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:followers) %></dt>
      <dd><pre class="prettyprint"><%= @tweeter.followers %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:following) %></dt>
      <dd><pre class="prettyprint"><%= @tweeter.following %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:influence) %></dt>
      <dd><pre class="prettyprint"><%= @tweeter.influence %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tweet_count) %></dt>
      <dd><pre class="prettyprint"><%= @tweeter.tweet_count %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tweeters_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tweeter_path(@tweeter), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tweeter_path(@tweeter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

