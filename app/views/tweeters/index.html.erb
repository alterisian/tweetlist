<%- model_class = Tweeter -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tweeter %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:handle) %></th>
      <th><%= model_class.human_attribute_name(:access_token) %></th>
      <th><%= model_class.human_attribute_name(:access_token_secret) %></th>
      <th><%= model_class.human_attribute_name(:followers) %></th>
      <th><%= model_class.human_attribute_name(:following) %></th>
      <th><%= model_class.human_attribute_name(:influence) %></th>
      <th><%= model_class.human_attribute_name(:tweet_count) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tweeters.each do |tweeter| %>
      <tr>
        <td><%= tweeter.id %></td>
        <td><%= tweeter.handle %></td>
        <td><%= tweeter.access_token %></td>
        <td><%= tweeter.access_token_secret %></td>
        <td><%= tweeter.followers %></td>
        <td><%= tweeter.following %></td>
        <td><%= tweeter.influence %></td>
        <td><%= tweeter.tweet_count %></td>
        <td><%=l tweeter.created_at, format: :long %></td>
        <td>
          <%= link_to tweeter_path(tweeter), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to tweeter_path(tweeter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tweeter_path,
            :class => 'btn btn-primary' %>
